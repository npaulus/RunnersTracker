@model RunnersTracker.WebUI.Models.LogEntryModel
@{
    ViewBag.Title = "AddActivity";
}

<div class="row">
    <div class="small-12 large-12 columns">
        <h2 style="text-align: center;">Add Activity</h2>
    </div>
</div>
<div class="row">
    <div class="small-8 small-centered columns panel">
        <form name="addactivity" method="post" action="/log/addactivty">
            <div class="row">
                <div class="small-3 large-3 columns">
                    @Html.LabelFor(model => model.ActivityName, new { @class = "right inline" })
                </div>
                <div class="small-9 large-9 columns">
                    @Html.TextBoxFor(model => model.ActivityName, new { placeholder = "Activity Name", @class = "small-5 large-5 columns" })
                    @Html.ValidationMessageFor(model => model.ActivityName)
                </div>
            </div>
            <div class="row">
                <div class="small-3 large-3 columns">
                    @Html.LabelFor(model => model.ActivityType, new { @class = "right inline" })
                </div>
                <div class="small-9 large-9 columns">
                    
                    <select name="timeZone">
                        <option value="Road Running">Road Running</option>
                        <option value="Trail Running">Trail Running</option>
                        <option value="Treadmill Running">Treadmill Running</option>
                        <option value="Walking">Walking</option>
                        <option value="Hiking">Hiking</option>
                        <option value="Cycling">Cycling</option>
                        <option value="Elliptical">Elliptical</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="small-12 large-12 columns">
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="small-4 large-4 columns">
                    @Html.LabelFor(model => model.hours, new { @class = "right inline" })
                    @Html.TextBoxFor(model => model.hours)
                    @Html.ValidationMessageFor(model => model.hours)
                </div>
                <div class="small-4 large-4 columns">
                    @Html.LabelFor(model => model.minutes, new { @class = "right inline" })
                    @Html.TextBoxFor(model => model.minutes)
                    @Html.ValidationMessageFor(model => model.minutes)
                </div>
                <div class="small-4 large-4 columns">
                    @Html.LabelFor(model => model.seconds, new { @class = "right inline" })
                    @Html.TextBoxFor(model => model.seconds)
                    @Html.ValidationMessageFor(model => model.seconds)
                </div>
            </div>
            <div class="row">
                <div class="small-6 large-6">
                    @Html.LabelFor(model => model.Distance, new { @class = "right inline" })
                    @Html.TextBoxFor(model => model.Distance)
                    @Html.ValidationMessageFor(model => model.Distance)
                </div>
                <div class="small-6 large-6">
                    @Html.LabelFor(model => model.Calories, new { @class = "right inline" })
                    @Html.TextBoxFor(model => model.Calories)
                    @Html.ValidationMessageFor(model => model.Calories)
                </div>
            </div>
            <div class="row">
                <div class="small-3 large-3 columns">
                    Running Shoes Used:
                </div>
                <div class="small-9 large-9 columns">
                    <select>
                        <option></option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="small-12 large-12 columns">
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="small-3 large-3 columns">
                    @Html.LabelFor(model => model.Tags, new { @class = "right inline" })
                </div>
                <div class="small-9 large-9 columns">
                    @Html.TextBoxFor(model => model.Tags)
                </div>
            </div>
            <div class="row">
                <div class="small-12 large-12 columns">
                    @Html.LabelFor(model => model.Description)
                </div>
            </div>
            <div class="row">
                <div class="small-12 large-12 columns">
                    @Html.TextAreaFor(model => model.Description, new { placeholder = "Description" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <input type="submit" class="button" value="Add Activity" />
        </form>
    </div>
</div>
