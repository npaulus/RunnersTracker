@model RunnersTracker.WebUI.Models.LogEntryModel

@{
    ViewBag.Title = "Runner's Tracker - Edit Activity";
}

<div class="row">
    <div class="small-12 large-12 columns">
        <h2 style="text-align: center;">Add Activity</h2>
    </div>
</div>
<div class="row">
    <div class="small-8 small-centered columns panel">
        <form name="editactivity" method="post" action="/RunningLog/editactivity" class="custom">
            <div class="row">
                <div class="small-3 large-3 columns">
                    @Html.HiddenFor(model => model.LogId)
                    @Html.LabelFor(model => model.ActivityName, new { @class = "right inline" })
                </div>
                <div class="small-9 large-9 columns">
                    @Html.EditorFor(model => model.ActivityName)
                    @Html.ValidationMessageFor(model => model.ActivityName)
                </div>
            </div>
            <div class="row">
                <div class="small-3 large-3 columns">
                    @Html.LabelFor(model => model.ActivityType, new { @class = "right inline" })
                </div>
                <div class="small-9 large-9 columns">
                    @Html.DropDownListFor(model => model.ActivityType, new SelectList(ViewBag.ActivityTypes, "Id", "ActivityType_Name"))
                    @Html.ValidationMessageFor(model => model.ActivityType)
                </div>
            </div>
            <div class="row">
                <div class="small-2 large-2 columns">
                    @Html.LabelFor(model => model.StartDate, new { @class = "right inline" })
                </div>
                <div class="small-4 large-4 columns">
                    @Html.TextBoxFor(model => model.StartDate, "{0:MM/dd/yyyy}")
                    @Html.ValidationMessageFor(model => model.StartDate)
                </div>
                <div class="small-2 large-2 columns">
                    @Html.LabelFor(model => model.StartTime, new { @class = "right inline" })
                </div>
                <div class="small-4 large-4 columns">
                    @Html.TextBoxFor(model => model.StartTime, new { placeholder = "05:00 PM" })
                    @Html.ValidationMessageFor(model => model.StartTime)
                </div>
            </div>
            <div class="row">
                <div class="small-3 large-3 columns">
                    @Html.LabelFor(model => model.TimeZone, new { @class = "right inline" })
                </div>
                <div class="small-9 large-9 columns">
                    @Html.DropDownListFor(model => model.TimeZone, new SelectList(ViewBag.TimeZones, "Id", "DisplayName", ViewBag.SelectTz))
                </div>
            </div>
            <div class="row">
                <div class="small-12 large-12 columns">
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="small-12 large-12 columns">
                    <h4 style="text-align:center;">Duration</h4>
                </div>
            </div>
            <div class="row">
                <div class="small-2 large-2 columns">
                    @Html.LabelFor(model => model.hours, new { @class = "right inline" })
                </div>
                <div class="small-2 large-2 columns">
                    @Html.TextBoxFor(model => model.hours)                    
                </div>
                <div class="small-2 large-2 columns">
                    @Html.LabelFor(model => model.minutes, new { @class = "right inline" })
                </div>
                <div class="small-2 large-2 columns">
                    @Html.TextBoxFor(model => model.minutes)
                    @Html.ValidationMessageFor(model => model.minutes)
                </div>
                <div class="small-2 large-2 columns">
                    @Html.LabelFor(model => model.seconds, new { @class = "right inline" })
                </div>
                <div class="small-2 large-2 columns">
                    @Html.TextBoxFor(model => model.seconds)
                    @Html.ValidationMessageFor(model => model.seconds)
                </div>
            </div>
            <div class="row">
                <div class="small-2 large-2 columns">
                    @Html.LabelFor(model => model.Distance, new { @class = "right inline" })
                </div>
                <div class="small-4 large-4 columns">
                    @Html.TextBoxFor(model => model.Distance)
                    @Html.ValidationMessageFor(model => model.Distance)
                </div>
                <div class="small-2 large-2 columns">
                    @Html.LabelFor(model => model.Calories, new { @class = "right inline" })
                </div>
                <div class="small-4 large-4 columns">
                    @Html.TextBoxFor(model => model.Calories)
                </div>
            </div>
            @if (ViewBag.UserShoes.Count > 0)
            {
                <div class="row">
                    <div class="row collapse">
                        <div class="small-2 columns">
                            @Html.LabelFor(model => model.ShoeId, new { @class = "right inline" })
                        </div>
                        <div class="small-10 columns">
                            @Html.DropDownListFor(model => model.ShoeId, new SelectList(ViewBag.UserShoes, "ShoeId", "ShoeName"), new { @class = "medium small-6 columns" })
                        </div>
                    </div>
                </div>
            }
            <div class="row">
                <div class="small-12 large-12 columns">
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="small-3 large-3 columns">
                    @Html.LabelFor(model => model.Tags, new { @class = "right inline" })
                </div>
                <div class="small-9 large-9 columns">
                    @Html.TextBoxFor(model => model.Tags)
                </div>
            </div>
            <div class="row">
                <div class="small-12 large-12 columns">
                    @Html.LabelFor(model => model.Description)
                </div>
            </div>
            <div class="row">
                <div class="small-12 large-12 columns">
                    @Html.TextAreaFor(model => model.Description, new { placeholder = "Description" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <input type="submit" class="button" value="Save Activity" />
        </form>
    </div>
</div>

