@using RunnersTracker.Business.DTO
@{
    ViewBag.Title = "Runner's Tracker - Summary";
}
@{UserDTO user = (UserDTO) Session["User"];}

<div class="row">
    <div class="small-12 large-12 columns">
        <h2 style="text-align:center;">@user.FirstName's Summary</h2>
    </div>
</div>
<div class="row">
    <div class="small-4 large-4 columns panel" style="margin-left:-10px;">
        <h4 style="text-align: center;">This Week</h4>
        <ul>
            <li>Activities: </li>
            <li>Miles: </li>
            <li>Time: </li>
            <li>Calories: </li>
        </ul>
    </div>
    <div class="small-4 large-4 small-center columns panel" style="margin-left:5px;" >
        <h4 style="text-align: center;">This Month</h4>
        <ul>
            <li>Activities: </li>
            <li>Miles: </li>
            <li>Time: </li>
            <li>Calories: </li>
        </ul>
    </div>
    <div class="small-4 large-4 columns panel"style="margin-left:5px;" >
        <h4 style="text-align: center;">Year to Date</h4>
        <ul>
            <li>Activities: </li>
            <li>Miles: </li>
            <li>Time: </li>
            <li>Calories: </li>
        </ul>
    </div>
</div>


